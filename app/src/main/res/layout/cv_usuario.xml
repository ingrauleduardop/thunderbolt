<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cvUsuarios"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="18dp"
    android:padding="3dp"
    android:layout_marginBottom="3dp"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:orientation="horizontal">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.01"
        android:orientation="vertical">

            <TextView
                android:id="@+id/txtVNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="nombre: "
                android:textSize="16sp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/txtVApellido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="Apellido: "
                android:textSize="16sp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/txtVCorreo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end"
                android:text="Correo: "
                android:textSize="16sp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/txtVDireccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end"
                android:text="Direccion: "
                android:textSize="16sp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/txtVTelefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end"
                android:text="Correo: "
                android:textSize="16sp"
                android:textStyle="normal|bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.99"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtVnombreUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_weight="0.9" />


            <TextView
                android:id="@+id/txtVApellidoUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_weight="0.9" />

            <TextView
                android:id="@+id/txtVCorreoUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_weight="0.9"
                android:ellipsize="marquee"
                android:maxLength="23"
                android:maxLines="1" />

            <TextView
                android:id="@+id/txtVDireccionUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_weight="0.9"
                android:ellipsize="marquee"
                android:maxLength="23"
                android:maxLines="1" />

            <TextView
                android:id="@+id/txtVTelefonoUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_weight="0.9"
                android:ellipsize="marquee"
                android:maxLength="23"
                android:maxLines="1" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="37dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:gravity="end"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imgBEditarUsuario"
                android:layout_marginTop="16dp"
                android:layout_gravity="end"
                app:srcCompat="@mipmap/ic_editar"
                android:background="#FFFFFF"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <ImageButton
                android:id="@+id/imgBBorrarUsuario"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="26dp"
                android:background="#FFFFFF"
                android:layout_gravity="end"
                app:srcCompat="@mipmap/ic_borrar" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
